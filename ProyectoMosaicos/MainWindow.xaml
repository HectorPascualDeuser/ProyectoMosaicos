<Window x:Class="ProyectoMosaicos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoMosaicos"
        mc:Ignorable="d"
        Title="Generador de Mosaicos" Height="450" Width="800">
    <Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>

            <Label Content="PALETS:" 
                   FontWeight="Bold"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="10,5,0,0" />

            <!-- SELECCIÓN DE PALETS -->
            <Label Content="Palet:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="10,30,0,0" />
            <ComboBox Name="cbPalet"
                      Width="165"
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top"
                      Margin="60,32,0,0"/>

            <!-- PALET PERSONALIZADO -->
            <Label Content="En caso de ser personalizado:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="10,60,0,0" />

            <Label Content="Alto:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Margin="10,90,0,0"/>
            <TextBox Name="tbAltoPalet"
                     HorizontalAlignment="Left" 
                     VerticalAlignment="Top"
                     Width="70" Height="25"
                     Margin="60,90,0,0"/>
            
            <Label Content="Ancho:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Margin="10,120,0,0"/>
            <TextBox Name="tbAnchoPalet"
                     HorizontalAlignment="Left" 
                     VerticalAlignment="Top"
                     Width="70" Height="25"
                     Margin="60,120,0,0"/>

            <Label Content="PRODUCTOS:" 
                   FontWeight="Bold"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="10,155,0,0" />
            
            <!-- SELECCIÓN DE PRODUCTOS -->
            <Label Content="Producto:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="10,180,0,0" />
            <ComboBox Name="cbProducto"
                      Width="150"
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top"
                      Margin="70,182,0,0"/>

            <Label Content="Insertar nuevo producto:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="10,210,0,0" />

            <Label Content="Nombre:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Margin="10,240,0,0"/>
            <TextBox Name="tbNombreProducto"
                     HorizontalAlignment="Left" 
                     VerticalAlignment="Top"
                     Width="150" Height="25"
                     Margin="70,240,0,0"/>

            <Label Content="Alto:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Margin="10,275,0,0"/>
            <TextBox Name="tbAltoProducto"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Width="150" Height="25"
                   Margin="70,275,0,0"/>

            <Label Content="Ancho:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Margin="10,310,0,0"/>
            <TextBox Name="tbAnchoProducto"
                     HorizontalAlignment="Left" 
                     VerticalAlignment="Top"
                     Width="150" Height="25"
                     Margin="70,310,0,0"/>

            <Button Name="btnInsertar"
                    Content="INSERTAR"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Width="210" Height="25"
                    Margin="10,355,0,0"/>

        </Grid>

    </Grid>
</Window>
